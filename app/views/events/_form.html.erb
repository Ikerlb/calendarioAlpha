<%= form_tag(:action => 'create',:rqst =>request_forgery_protection_token.to_s) do |f| %>

  <strong><center>Materia</center></strong>
  <%=select_tag 'subject_id', options_for_select(@subjects.collect{ |u| [u.name+" "+u.semester,u.id]}),class:'form-control'%>

  <br><strong><center>Nombre de el evento</center></strong>
  <%=text_field_tag('name',nil,class: 'form-control',placeholder:'Por ejemplo: 3er Examen Parcial')%>


  <br><strong><center>Descripcion del evento</center></strong>
  <%= text_field_tag('description',nil,class: 'form-control',placeholder:'Por ejemplo: El examen parcial vale la mitad de la calificacion.')%>

